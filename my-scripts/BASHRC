alias exe='echo "ğŸ” Scanning for script files in: $(pwd)" && \
find . -type f \( -name "*.sh" -o -name "*.bash" -o -name "*.service" -o -name "*.timer" -o -name "*.conf" -o -name "*.nix" -o -name "*.txt" \) -print0 | \
while IFS= read -r -d "" file; do
  echo "âš™ï¸  Making executable: $file"
  chmod +x "$file"
done'


alias lt="{
  echo 'ğŸ”§ Enabling USER services/timers...';
  systemctl --user list-unit-files | grep -Ei 'linuxtweaks?|LinuxTweaks?' | awk '{print \$1}' | while read -r unit; do
    echo \"â†’ Enabling user unit: \$unit\";
    systemctl --user enable --now \"\$unit\";
  done;
  echo 'ğŸ”§ Enabling SYSTEM services/timers...';
  systemctl list-unit-files | grep -Ei 'linuxtweaks?|LinuxTweaks?' | awk '{print \$1}' | while read -r unit; do
    echo \"â†’ Enabling system unit: \$unit\";
    sudo systemctl enable --now \"\$unit\";
  done;
  echo 'âœ… Done.';
}"


#--- YAD Helper Function ---#
fancy() {
  yad --center --width=400 --height=120 --window-icon=dialog-information --borders=10 \
    --title="LinuxTweaks NVIDIA Installer" --text="$1" --button=gtk-ok:0 --no-buttons &
  YAD_PID=$!
  bash -c "$2"
  kill $YAD_PID
}

# --- Service Status Check ---
status() {
  echo -e "\n\033[1;36mğŸ” Checking NVIDIA-related systemd services...\033[0m\n"
  printf "%-30s %-15s %-20s\n" "Service" "Enabled" "Active State"
  printf "%-30s %-15s %-20s\n" "-------" "-------" "-------------"

  for service in nvidia-persistenced nvidia-suspend nvidia-resume nvidia-hibernate; do
    # Enabled check
    if systemctl is-enabled --quiet "$service"; then
      enabled="\033[1;32menabled ğŸŸ¢\033[0m"
    else
      enabled="\033[1;33mdisabled ğŸŸ¡\033[0m"
    fi

    # check with oneshot
    if systemctl is-active --quiet "$service"; then
      active="\033[1;32mactive ğŸŸ¢\033[0m"
    else
      type=$(systemctl show -p Type --value "$service")
      if [[ "$type" == "oneshot" ]]; then
        active="\033[1;34moneshot (idle) ğŸ“Œ\033[0m"
      else
        active="\033[1;31minactive âŒ\033[0m"
      fi
    fi

    # result
    printf "%-30s %-15b %-20b\n" "$service" "$enabled" "$active"
  done

  echo -e "\n\033[0;36mğŸ“Œ Note for myself: 'oneshot (idle)' means the service runs only during suspend/resume/hibernate events....\033[0m\n"
}

